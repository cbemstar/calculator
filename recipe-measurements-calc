<body>
	<div class="calculator-container">
		<div class="embed-code">
			<h2>Embed Code</h2>
			<textarea id="embed-code" readonly>
				<iframe src="https://cbemstar.github.io/calculator/recipe-measurements-calc.html" frameborder="0" width="100%" height="300"></iframe>
			</textarea>
			<button id="copy-btn">Copy Embed Code</button>
		</div>
		<div class="calculator">
			<h2>Measurement Converter</h2>
			<select id="unit">
				<option value="teaspoon">Teaspoon</option>
				<option value="tablespoon">Tablespoon</option>
				<option value="gram">Gram</option>
				<option value="milliliter">Milliliter</option>
				<option value="ounce">Ounce</option>
			</select>
			<input type="number" id="value" placeholder="Value">
			<button id="convert-btn">Convert</button>
			<div class="results">
				<div class="result-card" id="result-1"></div>
				<div class="result-card" id="result-2"></div>
				<div class="result-card" id="result-3"></div>
				<div class="result-card" id="result-4"></div>
			</div>
		</div>
	</div>
	<script>
		const unitSelect = document.getElementById('unit');
const valueInput = document.getElementById('value');
const convertBtn = document.getElementById('convert-btn');
const resultCards = document.querySelectorAll('.result-card');
const embedCode = document.getElementById('embed-code');
const copyBtn = document.getElementById('copy-btn');
const toastNotification = document.createElement('div');
toastNotification.className = 'toast-notification';

convertBtn.addEventListener('click', convertMeasurement);
copyBtn.addEventListener('click', copyEmbedCode);

function convertMeasurement() {
	const unit = unitSelect.value;
	const value = parseFloat(valueInput.value);
	if (isNaN(value)) return;
	let grams, tablespoons, milliliters, ounces;
	switch (unit) {
		case 'teaspoon':
			grams = value * 5;
			tablespoons = value / 3;
			milliliters = value * 5;
			ounces = value / 6;
			break;
		case 'tablespoon':
			grams = value * 15;
			tablespoons = value;
			milliliters = value * 15;
			ounces = value / 2;
			break;
		case 'gram':
			grams = value;
			tablespoons = value / 15;
			milliliters = value;
			ounces = value / 28.35;
			break;
		case 'milliliter':
			grams = value;
			tablespoons = value / 15;
			milliliters = value;
			ounces = value / 29.57;
			break;
		case 'ounce':
			grams = value * 28.35;
			tablespoons = value * 2;
			milliliters = value * 29.57;
			ounces = value;
			break;
	}
	resultCards[0].innerHTML = `${unit === 'tablespoon' ? 'Teaspoon' : 'Gram'}: ${grams.toFixed(2)}`;
	resultCards[1].innerHTML = `${unit === 'teaspoon' ? 'Tablespoon' : 'Tablespoon'}: ${tablespoons.toFixed(2)}`;
	resultCards[2].innerHTML = `${unit === 'gram' ? 'Milliliter' : 'Milliliter'}: ${milliliters.toFixed(2)}`;
	resultCards[3].innerHTML = `${unit === 'milliliter' ? 'Ounce' : 'Ounce'}: ${ounces.toFixed(2)}`;
}

function copyEmbedCode() {
	embedCode.select();
	document.execCommand('copy');
	toastNotification.innerText = 'Embed code copied!';
	document.body.appendChild(toastNotification);
	setTimeout(() => {
		toastNotification.style.display = 'none';
	}, 2000);
}
	</script>
</body>
